program exercicio1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  result: Double;
  values: array[1..4] of Double;
  i: Integer;

begin
  try

    for i := 0 to 3 do
      begin
        WriteLn(Format('Insira o valor de número', [i]));
        Readln(values[i]);
      end;

    result := (values[0] + values[1] + values[2] + values[3]) / 4;
    WriteLn(Format('A média do seu número é %.4f', [result]));




  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
